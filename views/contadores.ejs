<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contadores</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles/impresoras.css" />
    <link rel="stylesheet" href="styles/contadores.css" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Contador de Impresoras</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#"
                >Impresoras</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Contadores</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Facturas</a>
            </li>
          </ul>
          <form class="d-flex">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Buscar"
              aria-label="Search"
            />
            <button class="btn btn-outline-success" type="submit">
              Buscar
            </button>
          </form>
        </div>
      </div>
    </nav>
    <header>
      <div>
        <h2>Contador de impresoras</h2>
      </div>
      <form class="formulario" action="/contador" method="post">
        <div class="row mb-3">
          <div class="col-md-6">
            <label for="impresora" class="form-label">Impresora</label>
            <select
              id="impresora"
              name="impresora"
              class="form-select impresora"
              required
            >
              <option value="">Selecciona un modelo</option>
              <% datos.forEach(function(datos){ %>
              <option value="Ricoh MP C2004">
                <%= datos.modelo%> (<%= datos.regional%>)
              </option>
              <%})%>
            </select>
          </div>
          <div class="col-md-6">
            <label for="regional" class="form-label">Fecha de Contador</label>
            <br />
            <input type="date" class="form-control" name="" id="" />
          </div>
        </div>
        <div class="mb-3">
          <% datos.forEach(function(dato) { %> <% if (dato.tipo === "B&N") { %>
          <label for="ubicacion" class="form-label">Contador</label>
          <br />
          <input
            type="number"
            class="form-control"
            placeholder="Contador B&N"
          />
          <% } else if (dato.tipo === "color") { %>
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="ubicacion" class="form-label">Contador</label>
              <input
                type="number"
                class="form-control"
                placeholder="Contador B&N"
              />
            </div>
            <div class="col-md-6">
              <label for="" class="form-label">Contador Color</label>
              <input
                type="number"
                class="form-control"
                placeholder="Contador Color"
              />
            </div>
          </div>

          <% } %> <% }); %>
        </div>
        <button type="submit" class="btn btn-primary">Agregar</button>
      </form>
    </header>
  </body>
</html>
